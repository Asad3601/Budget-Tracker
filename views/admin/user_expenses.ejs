        function fetchExpenses() {
            const sort = $('select[name="sort"]').val();
            const date = $('input[name="date"]').val();
            const search = $('input[name="search"]').val();

            $.ajax({
                url: '/get_user_expense_by_admin/<%= userData._id %>',
                method: 'GET',
