            alert(`Hello \n ${data.message}, with (Title): ${data.title}`);
            const notificationMessage = `Hello \n ${data.message}, with (Title): ${data.title}`;
            $.ajax({
                url: '/store-notification',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
